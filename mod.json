{
	"geode": "4.10.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "lr70.level-comments-widget",
	"name": "Level Comments Widget",
	"version": "v1.0.0",
	"developer": "LatterRarity70",
	"description": "Adds a level comments widget where you play",
	"links": {
		"community": "https://discord.gg/6SxAbk3bTA",
		"homepage": "https://t.me/LatterRarity70",
		"source": "https://github.com/LatterRarity70/Level-Comments-Widget"
	},
	"dependencies": {
		"geode.node-ids": ">=1.21.0",
		"alk.better-touch-prio": ">=1.0.4"
	},
	"tags": [ "online", "interface", "enhancement" ],
	"settings": {
		"show-left-side-menu": {
			"name": "Show left side menu",
			"type": "bool",
			"default": false
		},
		"show-menu": {
			"name": "Show main menu",
			"type": "bool",
			"default": false
		},
		"color": {
			"name": "BG Color",
			"type": "color",
			"default": "#000000"
		},
		"opacity": {
			"name": "BG Opacity",
			"type": "int",
			"default": 40,
			"min": 0,
			"max": 255,
			"controls": {
				"arrows": true,
				"arrow-step": 10,
				"slider": true,
				"slider-step": 1
			}
		},
		"scale": {
			"name": "Scale",
			"type": "float",
			"default": 0.475,
			"min": 0.1,
			"max": 1.0,
			"controls": {
				"arrows": true,
				"arrow-step": 0.1,
				"slider": true,
				"slider-step": 0.01
			}
		}
	}
}
